{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "files": {
    "ignore": ["public"]
  },
  "formatter": {
    "enabled": true,
    "attributePosition": "multiline",
    "indentStyle": "space",
    "indentWidth": 2,
    "include": ["*.js", "*.ts", "*.tsx", "*.mjs"],
    "ignore": ["node_modules", "dist"]
  },
  "javascript": {
    "formatter": {
      "enabled": true,
      "quoteStyle": "single",
      "jsxQuoteStyle": "double",
      "semicolons": "asNeeded",
      "arrowParentheses": "always",
      "indentStyle": "space",
      "indentWidth": 2,
      "lineWidth": 140,
      "quoteProperties": "asNeeded"
    }
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  }
}
